<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".dashboard.OrderActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    </LinearLayout>

    <EditText
        android:id="@+id/etTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:textColorHint="@color/colorAccent"
        android:inputType="textPersonName"
        android:hint="Book Title" />
    <Space
        android:layout_width="match_parent"
        android:layout_height="20dp" />

    <EditText
        android:id="@+id/etlocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:textColorHint="@color/colorAccent"
        android:inputType="textPersonName"
        android:hint="Place Of Order" />
    <Space
        android:layout_width="match_parent"
        android:layout_height="20dp" />
    <EditText
        android:id="@+id/etdelivery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:textColorHint="@color/colorAccent"
        android:inputType="textPersonName"
        android:hint="Delivery Location" />
    <Space
        android:layout_width="match_parent"
        android:layout_height="20dp" />
    <EditText
        android:id="@+id/etphoneno"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:textColorHint="@color/colorAccent"
        android:hint="Enter Your PhoneNumber"
        android:inputType="phone" />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/cvOrder"
        android:gravity="center"
        android:layout_marginTop="50dp"
        android:text="Place Order"
        android:textColor="@color/colorText"
        android:layout_gravity="center"
        android:background="@drawable/rounded_button_bg"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/btnshoworders"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:text="Show Orders"
        android:textColor="@color/colorText"
        android:layout_gravity="center"
        android:background="@drawable/rounded_button_bg"/>


</LinearLayout>